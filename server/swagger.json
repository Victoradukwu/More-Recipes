  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "username": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "profilePicture": {
          "type": "object"
        }
      }
    },
    "Recipe": {
      "type": "object",
      "required": [
        "name",
        "instructions",
        "ingredients"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string",
          "example": "Fruitie Froth"
        },
        "recipePicture": {
          "type": "object"
        },
        "ingredients": {
          "type": "string",
          "example": "mango, pawpaw, guava"
        },
        "instructions": {
          "type": "string",
          "example": "mix and match"
        },
        "upvote": {
          "type": "number",
          "example": 0
        },
        "downvote": {
          "type": "number",
          "example": 0
        },
        "favorites": {
          "type": "number",
          "example": 0
        }
      }
    }
