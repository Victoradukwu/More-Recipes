      "get": {
        "tags": [
          "recipes"
        ],
        "summary": "retrieves all recipes in the catalog in descending order of upvotes",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {"name": "token",
            "in": "header",
            "description": "",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            },
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6NCwidXNlcm5hbWUiOiJqb2huIiwiZW1haWwiOiJqb2huQGFuZGVsYS5jb20iLCJpYXQiOjE1MTMyMDg1NzEsImV4cCI6MTUxMzI5NDk3MX0.IGwyfmOq7sZfMm7ddrjwAS_5zWmRFnxXRENhPKfuUcY"
          },
          {
            "name": "sortby",
            "in": "query",
            "description": "criteria for sorting the recipes",
            "required": true,
            "type": "string",
            "default": "sort=upvote&order=descending"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/recipes/{recipeId}": {
      "put": {
        "tags": [
          "recipes"
        ],
        "summary": "Update an existing recipe",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {"name": "token",
            "in": "header",
            "description": "",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            },
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6NCwidXNlcm5hbWUiOiJqb2huIiwiZW1haWwiOiJqb2huQGFuZGVsYS5jb20iLCJpYXQiOjE1MTMyMDg1NzEsImV4cCI6MTUxMzI5NDk3MX0.IGwyfmOq7sZfMm7ddrjwAS_5zWmRFnxXRENhPKfuUcY"
          },
          {
            "name": "recipeId",
            "in": "path",
            "description": "ID of recipe to update",
            "required": true,
            "type": "integer"
          },
          {
            "in": "body",
            "name": "body",
            "description": "recipe object that needs to be added to the store",
            "required": true,
            "schema": {
              "recipeName": {
                "description": "new recipeName",
                "required": false,
                "type": "string"
              },
              "ingredients": {
                "description": "the new ingredients",
                "required": false,
                "type": "string"
              },
              "instructions": {
                "description": "the new instructions",
                "required": false,
                "type": "string"
              },
              "category": {
                "description": "the new category",
                "required": false,
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid ID supplied"
          }
        }
      },
