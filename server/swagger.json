    {
      "name": "votes",
      "description": "Operations about upvotes and downvotes"
    },
    {
      "name": "favorites",
      "description": "Operations about favoriting a recipe"
    },
    {
      "name": "reviews",
      "description": "Operations about reviewing a recipe"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/users/signup": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Creates creates a new user",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "userdetails",
            "description": "user object to be created",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        }
      }
    },
    "/users/signin": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Logs user into the system",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "userdetails",
            "description": "user object to sign in",
            "required": true,
            "schema": {
              "username": {
                "description": "required username",
                "required": true,
                "type": "string"
              },
              "password": {
                "description": "The password for login in clear text",
                "required": true,
                "type": "string"
              }
          }
        } 
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid username or password"
          }
        }
      }
    },
