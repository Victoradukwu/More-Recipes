{
  "swagger": "2.0",
  "info": {
    "description": " This is the API documentation for **More-Recipes**, an application devoted to enhacing sharing of users' experience in the area of cooking. Registered users can view recipes submitted by other users. They can like, unlike, review and favorite such recipes. In addition, registered users can submit recipes and are able to edit and delete their own recipes.  To access the application, visit: https://victor-more-recipes.herokuapp.com.",
    "version": "1.0.0",
    "title": "More-Recipes",
    "contact": {
      "email": "vicads01@gmail.com"
    },
    "license": {
      "name": "Licence: MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "victor-more-recipes.herokuapp.com",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "user",
      "description": "Everything about your user"
    },
    {
      "name": "recipe",
      "description": "Everything about recipe"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/recipes": {
      "post": {
        "tags": [
          "recipe"
        ],
        "summary": "Create  a new recipe",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "description": "the user token for the logged on user"
          },
          {
            "in": "body",
            "name": "body",
            "description": "recipe object to create",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Recipe"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "success"
          },
          "default": {
            "description": "unsuccessful operation"
          }
        }
      },
      "get": {
        "tags": [
          "recipe"
        ],
        "summary": "retrieves all recipes in descending order of votes",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "sort",
            "type": "string",
            "description": "criteria for sorting the retrieved recipes",
            "required": true,
            "default": "upvote"
          },
          {
            "in": "query",
            "name": "order",
            "type": "string",
            "description": "direction of sort",
            "required": true,
            "default": "desc"
          }
        ],
        "responses": {
          "200": {
            "description": "success"
          },
          "default": {
            "description": "unsuccessful operation"
          }
        }
      }
    },
    "/recipes/{recipeId}": {
      "get": {
        "tags": [
          "recipe"
        ],
        "summary": "Find reccipe by ID",
        "description": "Returns a single recipe",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "description": "the user token for the logged on user"
          },
          {
            "name": "recipeId",
            "in": "path",
            "description": "ID of recipe to return",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "recipe not found"
          }
        }
      },
      "put": {
        "tags": [
          "recipe"
        ],
        "summary": "Update an existing recipe",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "description": "ID of recipe to return",
            "required": true,
            "type": "integer"
          },
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "description": "the user token for the logged on user"
          },
          {
            "name": "recipeName",
            "in": "formData",
            "description": "recipe's unique username",
            "required": false,
            "type": "string"
          },
          {
            "name": "instructions",
            "in": "formData",
            "description": "recipe's instructions",
            "required": false,
            "type": "string"
          },
          {
            "name": "ingredients",
            "in": "formData",
            "description": "recipe's insgredients",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Pet not found"
          },
          "405": {
            "description": "Validation exception"
          }
        }
      },
      "delete": {
        "tags": [
          "recipe"
        ],
        "summary": "Deletes a recipe",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "description": "the user token for the logged on user"
          },
          {
            "name": "recipeId",
            "in": "path",
            "description": "recipe id to delete",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "successful"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Pet not found"
          }
        }
      }
    },
    "/recipes/{recipeId}/upvote": {
      "put": {
        "tags": [
          "recipe"
        ],
        "summary": "upvote a recipe",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "description": "the user token for the logged on user"
          },
          {
            "name": "recipeId",
            "in": "path",
            "description": "ID of recipe to upvote",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "default": {
            "description": "unsuccessful operation"
          }
        }
      }
    },
    "/recipes/{recipeId}/downvote": {
      "put": {
        "tags": [
          "recipe"
        ],
        "summary": "downvote a recipe",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "description": "the user token for the logged on user"
          },
          {
            "name": "recipeId",
            "in": "path",
            "description": "ID of recipe to downvote",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "default": {
            "description": "unsuccessful operation"
          }
        }
      }
    },
    "/recipes/{recipeId}/review": {
      "post": {
        "tags": [
          "recipe"
        ],
        "summary": "adds a recipe review",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "recipeId",
            "in": "path",
            "description": "ID of recipe to review",
            "required": true,
            "type": "integer"
          },
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "description": "the user token for the logged on user"
          },
          {
            "name": "comment",
            "in": "formData",
            "description": "review comment",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful"
          },
          "default": {
            "description": "unsuccessful"
          }
        }
      }
    },
    "/users/signup": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Creates  a new user",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "user object to create",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "successful"
          },
          "default": {
            "description": "unsuccessful operation"
          }
        }
      }
    },
    "/users/signin": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Logs user into the system",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "username",
            "in": "formData",
            "description": "user's unique username",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "formData",
            "description": "user's password",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "string"
            }
          },
          "400": {
            "description": "Invalid username/password supplied"
          }
        }
      }
    },
    "/users/recipes": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "retrieves all recipes belongng to the logged in user",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "description": "the user token for the logged on user"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "string"
            }
          },
          "400": {
            "description": "Invalid username/password supplied"
          }
        }
      }
    },
    "/users/favorites": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "retrieves all favorites recipes of the logged in user",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "description": "the user token for the logged on user"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid username/password supplied"
          }
        }
      }
    },
    "/users/{recipeId}/favorites": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "adds the specified recipe as favorite of the logged in user",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "type": "string",
            "required": true,
            "description": "the user token for the logged on user"
          },
          {
            "name": "recipeId",
            "in": "path",
            "description": "ID of recipe to favorite",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "string"
            }
          },
          "400": {
            "description": "Invalid username/password supplied"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "required": [
        "userame",
        "name",
        "email",
        "password",
        "confirmPassword"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "username": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "confirmPassword": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "profilePicture": {
          "type": "integer"
        }
      }
    },
    "Recipe": {
      "type": "object",
      "required": [
        "recipeName",
        "ingredients",
        "instructions"
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "recipeName": {
          "type": "string"
        },
        "ingredients": {
          "type": "string"
        },
        "instructions": {
          "type": "string"
        },
        "upvote": {
          "type": "number"
        },
        "downvote": {
          "type": "number"
        },
        "favorite": {
          "type": "number"
        },
        "profilePicture": {
          "type": "object"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about More-Recipes",
    "url": "http://github.com/victoradukwu/more-recipes"
  }
}